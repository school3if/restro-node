<h2 class="text-center mt-3">Реєстрація</h1>
{{#if error}}<h5 class="alert alert-danger mt-3">{{{error}}}</h5>{{/if}}
{{#if success}}<h5 class="alert alert-success mt-3">{{{success}}}</h5>{{/if}}
<form class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1" method="POST" action="/register">
    <div class="form-group">
        <label for="inputLogin">Логін</label>
        <input type="" class="form-control" id="inputLogin" name="username">
    </div>
    <div class="form-group">
        <label for="inputPassword">Пароль</label>
        <input type="password" class="form-control" id="inputPassword" name="password">
        <small id="passwordHelp" class="form-text text-muted">Пароль має містити від 8 до 32 символів.</small>
    </div>
    <div class="form-group">
        <label for="repeatPassword">Повторіть пароль</label>
        <input type="password" class="form-control" id="repeatPassword" name="password_again">
    </div>
    <button type="submit" class="btn btn-primary" id="btnSub">Зареєструватися</button>
</form>
<script type="text/javascript">
    var login = getCookie('login') || "";
    var input = document.getElementById("inputLogin");
    var submit = document.getElementById("btnSub");
    input.value = login;
    submit.onclick = function(){
        saveCookie('login', input.value, 94608000);
    };
</script>