<h2 class="text-center mt-3">Меню</h2>
{{#with this as |root|}}
  <div class="container py-5">
    <section>
      <div class="row justify-content-start">
        {{#if menu}}
          {{#each menu}}
            <div class="col-sm-6 col-md-4 my-3">
              <div class="card dish-card">
                  {{#if thumb}}
                    <img class="card-img-top p-2" src="{{thumb}}">
                  {{else}}
                    <img class="card-img-top p-2" src="../img/default.jpg">
                  {{/if}}
                <div class="card-body">
                  <h5 class="card-title text-center">{{title}}</h5>
                  <div class="card-text d-flex justify-content-between align-items-center">
                    <p class="m-0">Ціна: <span class="font-weight-bold">{{price}}</span></p>
                  {{#if root.username}}
                    <div data-id="{{_id}}" data-name="{{title}}" data-price="{{price}}" onclick="addToCartClick(event)" class="btn btn-primary spinner">В кошик {{this.username}}</div>
                  {{else}}
                    <div class="btn btn-secondary">В кошик {{this.username}}</div>
                  {{/if}}
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        {{else}}
          <p>На цю дату меню ще не сформоване</p>
        {{/if}}
      </div>
    </section>
  </div>
{{/with}}
